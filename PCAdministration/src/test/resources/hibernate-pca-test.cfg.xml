<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
	<property name="connection.url">jdbc:hsqldb:mem:j2e</property>
    <property name="connection.username">sa</property>
    <property name="connection.password" />
    <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
    <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
    <property name="show_sql">false</property>
    <property name="autocommit">false</property>
	<property name="jdbc.batch_size">0</property>
	<property name="jdbc.use_scrollable_resultsets">false</property>
	
		<!--Test Test  -->
	<mapping class="com.endress.infoserve.test.pca.model.Role"/>
	<mapping class="com.endress.infoserve.test.pca.model.User"/>
	<mapping class="com.endress.infoserve.test.pca.model.PC"/>
	
</session-factory>
</hibernate-configuration>
